<% if @request %>
  $('#cofirm-<%= params[:id] %>').html('<span class="btn btn-success"><%= t("donate.confirmed") %></span>');
  $('.total_money').html('<%= number_to_currency(@donate.event.expense, locale: :vi) %>');
  $('.pending_money').html('<%= number_to_currency(@event.donate.pending.expense_pending, locale: :vi) %>');
<% else %>
  $('#page-container').append('<%= j render "shared/flash_warning" %>');
<% end %>
