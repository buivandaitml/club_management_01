<div class="notification-event">
  <div class="notification-value">
    <a href="#" class="h6 notification-friend"><%= notification.owner_full_name %></a>
    <%= t "notification_report", status: t(notification.key.try(:downcase)) %>
    <a href="#" class="h6 notification-friend">
      <%= t notification.trackable_type.try(:downcase) %></a>
    <% if notification.container && check_notification_reject_approve_report(notification) %>
      <%= render partial: "notifications/notification_reject_approve_report",
        locals: {notification: notification} %>
    <% elsif notification.container && check_notification_create_update_report(notification) %>
      <%= render partial: "notifications/notification_create_report",
        locals: {notification: notification} %>
    <% end %>
  </div>
</div>
