<div class="row">
  <div class="col-md-6">
    <div class="block">
      <div class="block-title">
        <h2><strong><%= t "users" %></h2>
      </div>
      <div class="block-content-full">
        <%= line_chart User.group(:created_at).count, min: Settings.min_line,
          max: Settings.max_line, refresh: Settings.refresh %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="block">
      <div class="block-title">
        <h2><strong><%= t "organizations.organization" %></h2>
      </div>
      <div class="block-content-full">
        <%= line_chart Organization.group(:created_at).count, min: Settings.min_line,
          max: Settings.max_line, refresh: Settings.refresh %>
      </div>
    </div>
  </div>
</div>
