<footer class="site-footer site-section">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-6 address-footer">
        <p><i class="fa fa-map-marker" aria-hidden="true"></i>
          <%= t "address_com" %>
        </p>
        <p><i class="fa fa-phone" aria-hidden="true"></i><%= t "phone_com" %></p>
        <p><i class="fa fa-envelope" aria-hidden="true"></i><%= t "mail_com" %></p>
      </div>
      <div class="col-sm-6 col-md-3 follow-footer">
        <h4 class="footer-heading"><%= t "follow_us" %></h4>
        <ul class="footer-nav footer-nav-social list-inline">
          <li>
            <%= link_to "https://www.facebook.com/FramgiaVietnam", target: :blank do %>
              <i class="fa fa-facebook"></i>
            <% end %>
          </li>
          <li>
            <%= link_to "https://github.com/framgia", target: :blank do %>
              <i class="fa fa-github"></i>
            <% end %>
          </li>
          <li>
            <%= link_to "https://www.linkedin.com/company/framgia-vietnam",
              target: :blank do %>
              <i class="fa fa-linkedin"></i>
            <% end %>
          </li>
        </ul>
      </div>
      <div class="col-sm-6 col-md-3">
        <p class="footer-icon"><b class="char-app"><%= t "F" %></b>
          <label class="logo-small"><%= t "club_logo" %></label></p>
        <p>
          <a href="http://framgia.com" target="_blank">
            <img src="http://poll.framgia.vn/uploads/images/logo.png"
              class="copyright-image">
          </a>
            <span class="color-white"><%= t "copyright" %></span>
        </p>
      </div>
    </div>
  </div>
</footer>
<%= link_to "#", id: "to-top", class: "top" do %>
  <i class="fa fa-angle-up"></i>
<% end %>
