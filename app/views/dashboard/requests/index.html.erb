<div id="page-content">
  <div class="block full">
    <div class="block-title">
      <h2><strong><%= t "requests_of" %><%= @organization.name %></strong></h2>
    </div>
    <div class="table-responsive">
      <table id="example-datatable"
        class="table table-vcenter table-condensed table-bordered">
        <thead>
          <tr>
            <th class="text-center"><%= t "id" %></th>
            <th class="text-center"><i class="gi gi-user"></i></th>
            <th><%= t "name_request" %></th>
            <th><%= t "date_request" %></th>
            <th><%= t "user_request" %></th>
            <th class="text-center"><%= t "view_detail" %></th>
          </tr>
        </thead>
        <tbody>
          <% @requests.each do |request| %>
            <tr>
              <td class="text-center"><%= request.id %></td>
              <td class="text-center"><%= image_tag request.logo,
                class: "circle-profile-list" %></td>
              <td><%= request.name %></a></td>
              <td><%= l request.created_at, format: :short %></td>
              <td><%= request.user.full_name %></td>
              <td class="text-center">
                <%= link_to t("view"), manager_request_path(request.id),
                  class: "btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
