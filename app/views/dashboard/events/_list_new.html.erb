<div class="block">
  <div class="block-title">
    <h2><strong><%= t "list_news" %></strong></h2>
  </div>
  <div class="row">
    <% @event.news.newest.take(Settings.event_news).each do |news| %>
      <div class="row form-group">
        <div class="col-sm-5 text-center full-img-new">
          <%= link_to club_manager_club_event_news_path(event_id: @event.id, id: news.id) do %>
            <%= image_tag news.image %>
          <% end %>
        </div>
        <div class="col-sm-6">
          <h4><b><%= news.title %></b></h4>
          <div class="inside-div">
            <%= truncate_html(news.content.html_safe, length: Settings.new_detail) %><br>
            <%= link_to t("view_more"),
              club_manager_club_event_news_path(event_id: @event.id, id: news.id),
              class: "pull-right" %>
          </div>
        </div>
      </div><hr>
    <% end %>
  </div>
  <% if @event.news.size > Settings.event_new  %>
    <div class="text-center">
      <%= link_to t("view_more"), t("do_nothing") %>
    </div>
  <% end %>
</div>
