 <div class="block">
  <div class="block-title">
    <h2><strong><%= t "club_manager.event.joined" %></strong></h2>
  </div>
  <div class="row text-center">
    <% @event.users.each do |user_event| %>
      <% if join_event? @event %>
        <div class="col-sm-4">
        <%= link_to club_manager_club_member_path(id: user_event.id, club_id: @club.id) do %>
          <%= image_tag user_event.avatar, class: "circle-profile-list" %>
        <% end %>
        <h4><%= user_event.full_name %></h4>
      </div>
      <% end %>
    <% end %>
  </div>
  <% if @event.users.size > Settings.event_user  %>
    <div class="text-center">
      <%= link_to t "view_more", t("do_nothing") %>
    </div>
  <% end %>
</div>
