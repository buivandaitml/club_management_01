<div id="sidebar">
  <div id="sidebar-scroll">
    <div class="sidebar-content">
      <%= link_to dashboard_path, class: "sidebar-brand" do %>
        <span class="sidebar-nav-mini-hide">
          <strong class="padding_left_after_login">
            <%= t "dashboard" %>
          </strong>
        </span>
      <% end %>
      <div class="sidebar-section sidebar-user clearfix sidebar-nav-mini-hide">
        <div class="sidebar-user-avatar">
          <%= link_to t("do_nothing") do %>
            <%= image_tag current_user.avatar %>
          <% end %>
        </div>
        <div class="sidebar-user-name"></div>
        <div class="sidebar-user-links">
          <%= link_to link_to user_path(current_user), title: t("profile") do %>
            <i class="gi gi-user"></i></a>
          <% end %>
          <%= link_to link_to user_path(current_user), title: t("setting") do %>
            <i class="gi gi-cogwheel"></i></a>
          <% end %>
          <%= link_to destroy_user_session_path, title: t("logout") do %>
            <i class="gi gi-exit"></i></a>
          <% end %>
        </div>
      </div>
      <ul class="sidebar-nav">
        <li class="sidebar-header">
          <span class="sidebar-hea  der-title">
            <%= t "organization_manager" %>
          </span>
        </li>
        <li>
          <%= link_to root_path, target: "_blank" do %>
            <i class="fa fa-home sidebar-nav-icon"></i>
            <span class="sidebar-nav-mini-hide"><%= t "home" %></span>
          <% end %>
        </li>

        <%= load_menu_organization_manager @organizations %>
        <%= load_menu_club_manager manager_of_club(current_user) %>
      </ul>
    </div>
  </div>
</div>
