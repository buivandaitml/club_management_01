<div id="page-content" class="block">
  <div class="block full">
    <div class="block-title">
      <h2><strong><%= t "clubs_of" %><%= @organization.name %></strong></h2>
    </div>
    <div class="table-responsive">
      <table class="table table-vcenter datatable-public table-condensed table-bordered">
        <thead>
          <tr>
            <th class="text-center"><%= t "id" %></th>
            <th class="text-center"><i class="gi gi-user"></i></th>
            <th><%= t "name_club" %></th>
            <th><%= t "description" %></th>
            <th class="text-center"><%= t "view" %></th>
          </tr>
        </thead>
        <tbody>
          <% @clubs.each do |club| %>
            <tr>
              <td class="text-center"><%= club.id %></td>
              <td class="text-center"><%= image_tag club.logo,
                class: "circle-profile-list" %></td>
              <td><%= club.name %></a></td>
              <td>
                <%= club.content.truncate(Settings.event_truncate).html_safe unless club.content.nil? %>
              </td>
              <td class="text-center">
                <%= check_view_manager club %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
