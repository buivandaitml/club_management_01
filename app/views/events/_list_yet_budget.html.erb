<div class="table-responsive">
  <table id="example-datatable2"
      class="table table-vcenter example-datatable2 table-condensed table-bordered">
    <thead>
      <tr>
        <th><%= t "name" %></th>
        <th><%= t "email" %></th>
      </tr>
    </thead>
    <tbody>
      <% if @members_yet.any? %>
        <% @members_yet.each do |user| %>
          <tr>
            <td><%= link_to user.full_name, user_path(user.id), target: :blank %></td>
            <td><%= user.email %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="3">
            <h3 class="center notifi-empty"><%= t "empty" %></h3>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
