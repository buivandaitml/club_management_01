<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t "name" %></th>
        <th><%= t "email" %></th>
        <th><%= t "date_done" %></th>
      </tr>
    </thead>
    <tbody>
      <% if @members_done.any? %>
        <% @members_done.each do |user| %>
          <tr>
            <td><%= link_to user.full_name, user_path(user.id), target: :blank %></td>
            <td><%= user.email %></td>
            <td><%= l Budget.of_user(user.id, @event.id).created_at,
              format: :short %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="3">
            <h3 class="center notifi-empty"><%= t "empty" %></h3>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
