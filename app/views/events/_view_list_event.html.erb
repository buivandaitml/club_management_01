<% events.each do |event| %>
      <div class="site-block">
        <div class="row">
          <div class="col-md-4">
            <p>
              <%= link_to club_event_url(event.club, event) do %>
                <%= image_tag event.image, class: "img-responsive" %>
              <% end %>
            </p>
          </div>
          <div class="col-md-8 description-event">
            <h4 class="site-heading"><strong><%= event.name %></strong>
              <% if event.notification? %>
                 <i class="fa fa-bullhorn notification" aria-hidden="true"></i>
               <% else %>
                 <i class="fa fa-usd money" aria-hidden="true"></i>
               <% end %>
            </h4>
            <p class="text-justify"><%= event.description.truncate(Settings.event_truncate).html_safe unless event.description.nil? %></p>
          </div>
        </div>
        <div class="clearfix">
          <p class="pull-right">
            <%= link_to t("read_more"),
              club_event_url(event.club, event),
              class: "label label-primary" %>
          </p>
          <ul class="list-inline pull-left">
            <% unless event.date_start.blank? && event.date_end.blank? %>
              <li>
                <i class="fa fa-calendar"></i>
                <%= event.date_start %>
                <span class="fa fa-long-arrow-right"></span>
                <%= event.date_end %>
              </li>
            <% end %>
            <li>
              <i class="fa fa-user"></i> <%= t "post_by" %>
              <%= link_to event.user.full_name, event.user %>
            </li>
            <li>
              <i class="fa fa-comments"></i>
              <a href="javascript:void(0)">
                <%= event.comments.size %>
              </a>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
    <div class="text-right">
      <%= paginate @events %>
    </div>
