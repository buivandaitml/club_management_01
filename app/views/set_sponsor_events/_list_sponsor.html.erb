<div class="ui-block col-md-12">
  <div class="infor-request ui-block-title">
    <h6 class="title"><%= t "sponsors.sponsors" %></h6>
    <div class="pull-right funtion-request">
      <%= link_to organization_path(@organization), remote: :true,
        class: "btn btn-primary btn-sm button-back" do %>
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
        <%= t "back" %>
      <% end %>
    </div>
  </div>
  <% if @sponsors.any? %>
    <div class="table-responsive">
      <table class="table ui-block table-pricing">
        <thead>
          <tr>
            <th class="text-center"><%= t "name_event" %></th>
            <th class="text-center"><%= t "name_club" %></th>
            <th class="text-center"><%= t "timeline" %></th>
            <th class="text-center"><%= t "action" %></th>
          </tr>
        </thead>
        <tbody>
          <% @sponsors.each do |sponsor| %>
            <tr class="add-user-member category-<%= sponsor.id %>">
              <td class= "text-center type-name ">
                <%= sponsor.event.name %>
              </td>
              <td class="text-center">
                <%= sponsor.event.club_name %>
              </td>
              <td class="text-center">
                <%= l sponsor.created_at, format: :short %>
              </td>
              <td class="text-center">
                <%= link_to set_sponsor_event_path(sponsor.id), remote: true,
                  title: t("info"), class: "btn btn-warning btn-info-report" do %>
                  <i class="fa fa-info"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-12">
      <nav aria-label="Page navigation example">
        <%= paginate @sponsors, remote: true %>
      </nav>
    </div>
  <% else %>
    <div class="row text-center">
      <h5 class="center notifi-empty"><%= t "no_category" %></h5>
    </div>
  <% end %>
</div>
<div id="statistic-modal" class="modal fade" tabindex="-1"
  role="dialog" aria-hidden="true">
  <%= render "statistic_reports/modal" %>
</div>
