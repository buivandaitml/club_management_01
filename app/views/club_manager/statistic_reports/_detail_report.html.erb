<div class="col-md-12 col-md-offset-2">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <% if report.monthly? %>
          <h6><%= t "detail_report_club", time: month_report(report.time),
            year: report.year %></h6>
        <% elsif report.quarterly? %>
          <h6><%= t "detail_report_club", time: quarter_report(report.time),
            year: report.year %></h6>
        <% end %>
        <%= button_tag type: "button", class: "close", data: {dismiss: "modal"} do %>
          &times;
        <% end %>
      </div>
      <div class="modal-body">
        <div class="text-center">
          <div class="list-infor-club inline-items">
            <strong><%= t "user_name" %>:</strong>
            <span><%= report.user_full_name %></span>
          </div>
          <div class="list-infor-club inline-items">
            <strong><%= t "date_request" %>:</strong>
            <span>
              <%= l report.created_at, format: :short %>
            </span>
          </div>
          <div class="list-infor-club inline-items">
            <strong><%= t "status" %>:</strong>
            <span>
              <%= t"#{report.status}" %>
            </span>
          </div>
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "item_report" %>:</strong>
            </h6><br/>
            <span><%= report.item_report %></span><br/>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "detail_report" %>:</strong>
            </h6><br/>
            <span>
              <%= report.detail_report %>
            </span><br/>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "plan_next_month" %>:</strong>
            </h6><br/>
            <span>
              <%= report.plan_next_month %>
            </span><br/>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "others" %>:</strong>
            </h6><br/>
            <span>
              <%= report.others %>
            </span><br/>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "note" %>:</strong>
            </h6><br/>
            <span>
              <%= report.note %>
            </span>
          </div>
          <% if report.reason_reject %>
            <div class="inline-items report-detail">
              <h6 class="title">
                <i class="fa fa-codepen"></i>
                <strong><%= t "reason_reject" %></strong>
              </h6><br/>
              <span>
                <%= report.reason_reject %>
              </span>
            </div><br/>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <%= button_tag t("close"), class: "btn btn-sm btn-warning",
          "data-dismiss": "modal" %>
      </div>
    </div>
  </div>
</div>
