<div class="nested-fields">
  <div class="form-group row">
    <div class="form-group label-floating col-md-3">
      <label for="contact-name"><%= t "item_report" %></label></br>
      <%= f.select(:report_category_id, options_for_select(
        option_select_with_status(@report_categories.optional), f.object.report_category_id), {},
        {class: "form-control select_custom select_category_report_#{params[:action]}"}) %>
    </div>
    <div class="form-group label-floating col-md-8 push-md-1">
      <%= f.label(:detail, class: "control-label") do %>
        <%= t("club_manager.field_for_category_obligatory.detail_report") %>
        <span class="text-danger">*</span>
      <% end %>
      <%= f.text_area :detail, class: "form-control", required: true %>
      <div class="pull-right">
        <%= link_to_remove_association f do %>
          <i class="fa fa-trash-o" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
