<% if reports.any? %>
  <div class="table-reponsive">
    <table class="table ui-block table-pricing">
      <thead>
        <tr>
          <th><%= t ".person_report" %></th>
          <th><%= t ".date_report" %></th>
          <th><%= t ".time_report" %></th>
          <th><%= t ".status_report" %></th>
          <th><%= t ".action" %></th>
        </tr>
      </thead>
      <tbody id="table-list-report">
        <% reports.each do |report| %>
          <tr class="add-user-member report-<%= report.id %>">
            <%= render partial: "club_manager/statistic_reports/report", locals: {report: report} %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-12">
    <nav aria-label="Page navigation example">
      <%= paginate reports, remote: true %>
    </nav>
  </div>
<% else %>
  <tr class="text-center">
    <td colspan="4">
      <h5 class="center notifi-empty"><%= t ".no_report" %></h5>
    </td>
  </tr>
<% end %>
<div id="modal-info-report" class="modal fade" tabindex="-1"
  role="dialog" aria-hidden="true">
  <div class="col-md-12 col-md-offset-2">
    <div class="modal-dialog info-report modal-lg">
      <div class="modal-content">
        <div class="modal-body">
          <div class="block">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
