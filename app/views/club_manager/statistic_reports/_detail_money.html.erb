<div class="table-responsive">
  <table class="ui-block table-pricing table-white">
    <thead>
      <tr>
        <th><%= t ".date" %></th>
        <th class="money-colums"><%= t ".pay" %></th>
        <th class="money-colums"><%= t ".get" %></th>
        <th class="money-colums"><%= t ".money" %></th>
        <th class ="column-detail"><%= t ".detail" %></th>
      </tr>
    </thead>
    <tbody>
      <% array_detail.each do |detail| %>
        <tr>
          <td>
            <% if detail.date_event.present? %>
              <%= l detail.date_event, format: :short %>
            <% end %>
          </td>
          <% if detail.pay_money? %>
            <td><%= number_to_currency detail.money, locale: :vi %></td>
            <td></td>
          <% elsif detail.get_money? %>
            <td></td>
            <td><%= number_to_currency detail.money, locale: :vi %></td>
          <% end %>
          <td><%= number_to_currency(LastMoney.last_money_detail(detail), locale: :vi) %></td>
          <td><%= raw(detail.detail) %></td>
        </tr>
      <% end %>
      <tr>
        <td><%= t ".count" %></td>
        <%= total_pay_get_money array_detail %>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td colspan="4"></td>
        <td>
          <strong><%= t "statistic_reports.show.first_money" %>
            <%= first_money array_detail %></strong><br>
          <strong><%= t "statistic_reports.show.last_money" %>
            <%= last_money array_detail %></strong>
        </td>
      </tr>
    </tbody>
  </table>
</div>
