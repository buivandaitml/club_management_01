<div class="club-profile">
<%= render "users/users" %>
  <section class="">
    <div class="">
      <div class="profile clearfix">
        <div class="image club-profile-image">
          <%= link_to club_path(@club) do %>
            <%= image_tag @club.image, class: "img-cover", title: t("image_cover") %>
          <% end %>
          <div class="bottomleft col-md-4">
            <h3 class="name-club text-left"><%= @club.name %></h3>
            <span class="animation-slideUp hidden-xs rating-container">
              <%= render "ratings/rating" %>
            </span>
            <div class="join-cancel-toggle-container">
              <%= render "user_clubs/join_cancel_toggle" %>
            </div>
            <% if !current_user.user_clubs.of_club(@club).nil? && current_user.user_clubs.of_club(@club).joined? %>
              <%= link_to user_club_path(club_id: @club.id), method: :delete,
                data: {confirm: t("answer_leave")}, class: "join-club-button btn
                pull-left btn-club" do %>
                <%= t("leave_club") %>
                <i class="fa fa-share-square-o" aria-hidden="true"></i>
              <% end %>
            <% end %>
          </div>
          <div class="bottomright">
          </div>
        </div>
        <div class="user clearfix">
          <div class="avatars">
            <%= link_to @club do %>
              <%= image_tag @club.logo, title: t("logo"),
                class: "img-thumbnail img-profile" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
