<div class="container">
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 tab_detail_club">
      <div class="ui-block" id="event">
        <div class="ui-block-title ui-block-title-small">
          <h6 class="title col-md-1"><%= t "events" %></h6>
          <% if is_admin_club(@club).present? %>
            <%= link_to new_club_event_path(
              club_id: @club.id), class: "btn btn-sm btn-breez" do %>
              <i class="fa fa-plus-circle"> </i><%= t "club_manager.album.create" %>
            <% end %>
          <% end %>
        </div>
        <div class="content_tab" id="list-event-show">
          <%= render partial: "events/event", locals: {event: @club.events} %>
        </div>
      </div>
      <div class="ui-block" id="image">
        <div class="ui-block-title ui-block-title-small">
          <h6 class="title col-md-1"><%= t "albums" %></h6>
          <% if is_admin_club(@club).present? %>
            <%= link_to "#modal-new-album", data: {toggle: "modal"}, class: "btn btn-sm btn-breez" do %>
              <i class="fa fa-camera"></i><%= t "club_manager.album.create" %>
            <% end %>
          <% end %>
        </div>
        <div class="content_tab">
          <%= render partial: "albums/album" %>
        </div>
      </div>
      <div class="ui-block" id="content_club">
        <div class="ui-block-title ui-block-title-small">
          <h6 class="title"><%= t "detail" %></h6>
        </div>
        <div class="title-detail ui-block-title-small">
          <h6 class="title">
            <i class="fa fa-codepen" aria-hidden="true"></i>
            <%= t "content_club" %>
          </h6>
        </div>
        <div class="content_tab">
          <%= view_detail_club(@club.content) %>
        </div>
        <div class="title-detail ui-block-title-small">
          <h6 class="title">
            <i class="fa fa-codepen" aria-hidden="true"></i>
            <%= t "goal" %>
          </h6>
        </div>
        <div class="content_tab">
          <%= view_detail_club(@club.goal) %>
        </div>
      </div>
      <div class="ui-block" id="plan">
        <div class="ui-block-title ui-block-title-small">
          <h6 class="title"><%= t "plan_active" %></h6>
        </div>
        <div class="title-detail ui-block-title-small">
          <h6 class="title">
            <i class="fa fa-codepen" aria-hidden="true"></i>
            <%= t "plan" %>
          </h6>
        </div>
        <div class="content_tab">
          <%= view_detail_club(@club.plan) %>
        </div>
        <div class="title-detail ui-block-title-small">
          <h6 class="title">
            <i class="fa fa-codepen" aria-hidden="true"></i>
            <%= t "local_club" %>
          </h6>
        </div>
        <div class="content_tab">
          <p><%= view_detail_club(@club.local) %></p>
        </div>
      </div>
      <div class="ui-block" id="rules_club">
        <div class="ui-block-title ui-block-title-small">
          <h6 class="title"><%= t "rules" %></h6>
        </div>
        <div class="title-detail ui-block-title-small">
          <h6 class="title">
            <i class="fa fa-codepen" aria-hidden="true"></i>
            <%= t "rules_club" %>
          </h6>
        </div>
        <div class="content_tab">
          <%= view_detail_club(@club.rules) %>
        </div>
        <div class="title-detail ui-block-title-small">
          <h6 class="title">
            <i class="fa fa-codepen" aria-hidden="true"></i>
            <%= t "rule_finance" %>
          </h6>
        </div>
        <div class="content_tab">
          <%= view_detail_club(@club.rule_finance) %>
        </div>
        <div class="title-detail ui-block-title-small">
          <h6 class="title">
            <i class="fa fa-codepen" aria-hidden="true"></i>
            <%= t "time_member_join" %>
          </h6>
        </div>
        <div class="content_tab">
          <%= view_detail_club(@club.time_join) %>
        </div>
      </div>
    </div>
  </div>
</div>
