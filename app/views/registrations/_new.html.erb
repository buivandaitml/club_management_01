<div class="title h6"><%= t "register_title" %></div>
<%= devise_error_messages! %>
<%= form_for :user, url: user_registration_path, html: {class: "content"} do |f| %>
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12">
      <div class="form-group label-floating">
        <%= f.label(:full_name, t("full_name"), class: "control-label") %>
        <%= f.text_field :full_name, class: "form-control", required: true %>
      </div>
    </div>
    <div class="col-xl-12 col-lg-12 col-md-12">
      <div class="form-group label-floating">
        <%= f.label(:email, t("example_email"), class: "control-label") %>
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>
      <div class="form-group label-floating">
        <%= f.label(:password, t("password"), class: "control-label") %>
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>
      <div class="form-group label-floating">
        <%= f.label(:password_confirmation, t("password_confirmation"), class: "control-label") %>
        <%= f.password_field :password_confirmation,  class: "form-control" %>
      </div>
       <%= f.submit t("register"), class: "btn btn-purple btn-lg full-width" %>
    </div>
  </div>
<% end %>
