<% if @messages.present? %>
  $('#list-messages').prepend("<%= j render @messages %>");
  $('.num-step-message').val(parseInt($('.num-step-message').val()) + parseInt("<%= @messages.size %>"));
  $('div').animate({scrollTop: $('.custom_content_chat ul').height()});
<% else %>
  $('a.load-more-message').hide();
<% end %>
