<!-- Header -->
<%= render "clubs/sidebar" %>
<!-- ... end Header -->
<div class="header-spacer"></div>
<div class="container">
  <div class="row">
    <div class="col-xl-9 push-xl-3 col-lg-12 push-lg-0 col-md-12 col-sm-12 col-xs-12">
      <div class="ui-block responsive-flex">
        <div class="ui-block-title">
          <div class="h6 title"><%= t "list_organizations" %></div>
          <%= search_form_for @q, html:{class: "w-search"} do |f| %>
            <div class="form-group with-button">
              <div class="col-xs-12">
                <div class="input-group">
                  <%= f.text_field :name_or_description_cont,
                    class: "form-control", placeholder: t("name_des") %>
                  <button type="submit">
                    <svg class="olymp-magnifying-glass-icon"><use xlink:href="<%= url_to_asset("icons/icons.svg#olymp-magnifying-glass-icon") %>"></use></svg>
                  </button>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="row">
        <% if @organizations.empty? %>
            <h4 class="notifi-join center"><%= t "no_data_organization" %></h4 >
        <% else %>
          <% @organizations.each do |organization| %>
            <% if view_organization?(organization, current_user) %>
              <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                <div class="ui-block">
                  <div class="friend-item">
                    <div class="friend-header-thumb">
                      <%= link_to organization do %>
                        <%= image_tag organization.logo, class: "img-responsive" %>
                      <% end %>
                    </div>
                    <div class="friend-item-content">
                      <div class="friend-avatar">
                        <div class="author-thumb">
                        </div>
                        <div class="author-content">
                          <%= link_to organization.name, organization, class: "h5 author-name" %>
                        </div>
                      </div>
                      <div class="swiper-container">
                        <div class="swiper-wrapper">
                          <div class="swiper-slide">
                            <div class="friend-count" data-swiper-parallax="-500">
                              <%= link_to organization, class: "friend-count-item" do %>
                                <div class="h6"><%= organization.users.size %></div>
                                <div class="title"><%= t "organization.index.member" %></div>
                              <% end %>
                              <%= link_to organization, class: "friend-count-item" do %>
                                <div class="h6"><%= organization.clubs.size %></div>
                                <div class="title"><%= t "organization.index.club" %></div>
                              <% end %>
                            </div>
                          </div>
                        </div>
                        <div class="swiper-pagination"></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <nav aria-label="Page navigation example">
        <%= paginate @organizations %>
      </nav>
    </div>
    <div class="col-xl-3 pull-xl-9 col-lg-12 pull-lg-0 col-md-12 col-sm-12 col-xs-12">
      <div class="ui-block">
        <div class="ui-block-title">
          <h6 class="title"></h6>
        </div>
        <div class="ui-block-content">
          <ul class="widget w-personal-info item-block">

          </ul>
        </div>
      </div>
      <div class="ui-block">
        <div class="ui-block-title">
          <h6 class="title"></h6>
        </div>
        <div class="ui-block-content">
          <div class="widget w-socials">
          </div>
        </div>
      </div>
      <div class="ui-block">
        <div class="ui-block-title">
          <h6 class="title"></h6>
        </div>
        <div class="ui-block-content">
          <ul class="widget w-personal-info item-block">
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
