<% @clubs.each do |club| %>
  <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
    <div class="ui-block">
      <div class="friend-item">
        <div class="friend-header-thumb">
          <%= image_tag club.image %>
        </div>
        <div class="friend-item-content">
          <div class="friend-avatar">
            <div class="author-content">
              <%= link_to club_path(club), class: "h5 author-name" do %>
                <%= club.name %>
              <% end %>
              <div class="detail_item">
                <div class="rating_club">
                  <i class="fa fa-star" aria-hidden="true"></i>
                  <strong><%= club.rating.round Settings.round_float %></strong>
                  <%= t "for_ratings" %>
                </div>
                <div class="country">
                  <i class="fa fa-users" aria-hidden="true"></i>
                  <strong><%= club.user_clubs.joined.size %></strong><%= t "page_my_clubs.members" %>
                </div>
              </div>
            </div>
          </div>
          <div class="swiper-container">
            <p><%= club.content.truncate(Settings.truncate.club.description).html_safe unless club.content.nil? %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
