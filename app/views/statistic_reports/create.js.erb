<% if @statistic_report.errors.any? %>
  $('.error-messages').html('<%= j render partial: "shared/error_messages", locals: {object: @statistic_report} %>');
<% elsif @reports.size == Settings.count_render_list_report %>
  $('#list-report').html('<%= j render partial: "club_manager/statistic_reports/list_report",
    locals: {reports: @reports} %>');
  $('#modal-add-report').modal('hide');
  $('.container').append('<%= j render partial: "shared/flash_warning" %>');
  $('.notify').delay(4000).slideUp(300);
<% else %>
  $('#modal-add-report').modal('hide');
  $('.container').append('<%= j render partial: "shared/flash_warning" %>');
  $('#table-list-report').prepend('<%= j render partial: "statistic_report", locals: {report: @statistic_report} %>');
  $('.notify').delay(4000).slideUp(300);
<% end %>
