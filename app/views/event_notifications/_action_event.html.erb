<% if @club.is_admin?(current_user) && event.by_user?(current_user) && event.inprocess? %>
  <td class="funtion-event">
    <%= link_to edit_club_event_path(@club.id, event.id, event_category: event.event_category), title: t("edit"),
      class: "btn btn-sm btn-primary" do %>
      <i class="fa fa-pencil-square-o"></i>
    <% end %>
    <%= link_to club_event_path(@club.id, event.id), title: t("delete"),
      class: "btn btn-sm btn-danger", method: :delete,
      data: {confirm: t("delete_event")} do %>
      <i class="fa fa-remove"></i>
    <% end %>
  </td>
<% end %>
