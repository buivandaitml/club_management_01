<% if params[:category].to_i == Event.event_categories[:activity_money] %>
  $('#event-activity').html('<%= j render partial: "events/event", locals: {events: @events_activity,
    tab_activity: true} %>');
  $('#list-event-show').html('<%= j render partial: "events/event", locals: {events: @events,
    tab_activity: false} %>');
<% else %>
  $('#event-notification').html('<%= j render partial: "events/event", locals: {events: @events_notification,
    tab_activity: true} %>');
<% end %>
$('.container').append('<%= j render partial: "shared/flash_warning" %>');
$('.notify').slideUp(3000);
