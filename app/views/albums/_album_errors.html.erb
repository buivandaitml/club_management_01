<% if flash.any? %>
  <% flash.each do |key, values| %>
    <%= content_tag :div, values do %>
      <% if values.class == Array %>
        <ul class="alert alert-success">
          <% values.each do |value| %>
            <li><%= value %></li>
          <% end %>
        </ul>
      <% else %>
        <%= values %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
