<div class="infor-request ui-block-title">
  <%= form_for @organization.report_categories.build, remote: true do |f| %>
    <%= hidden_field_tag :organization_slug, @organization.slug %>
    <div id="error-explanation-category"></div>
    <div class = "row">
      <%= f.label t(".name_category"), class: "control-label label-name-type" %>
      <div class="pull-left">
        <%= f.text_field :name, required: true,
          class: "form-control input-text" %>
      </div>
      <div class="pull-right">
        <%= f.button t("btn_create_type"), type: :submit, class: "btn btn-sm btn-primary btn-create-type" %>
      </div>
    </div>
    <div class="row input-text">
      <%= link_to "#modal-choose-event-create", data: {toggle: "modal"},
        class: "btn btn-breez btn-bottom-0" do %>
        <%= t ".style_event" %>
      <% end %>
      <div id="modal-choose-event-create" class="modal fade" tabindex="-1"
        role="dialog" aria-hidden="true">
        <%= render partial: "modal_style_event", locals: {report_category: nil} %>
      </div>
    </div>
  <% end %>
</div>
